{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ESNext",
        "strict": true,
        "outDir": "dist",
        "module": "CommonJS",
        "declaration": true,
        "experimentalDecorators": true,
        "moduleResolution": "Node",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "esModuleInterop": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*",
        "src/mikro-orm.config.ts"
    ],
    "exclude": [
        "node_modules/"
    ],
    // "ts-node": {
    //     "esm": true,
    //     "transpileOnly": true
    // }
}